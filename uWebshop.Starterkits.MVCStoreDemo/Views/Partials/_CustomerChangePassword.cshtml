@using System.Configuration
@using System.Web.Profile
@using uWebshop.API

@{
	var member = Membership.GetUser();

	if (member != null)
	 {
		 using (Html.BeginUmbracoForm("Handle", "BasketHandler", null, new {@class = "form-horizontal"}))
		 {
			 <input type="hidden" name="changepassword" value="true"/>

			 <h3>Change your password</h3>
			 <div class="form-group">
				 <label class="col-lg-4 control-label" for="email">Username</label>
				 <div class="col-lg-8">
					 <input class="form-control" name="username" id="username" type="text" value="@member.UserName"/>
				 </div>
			 </div>
			 <div class="form-group">
				 <label class="col-lg-4 control-label" for="currentpassword">Current password</label>
				 <div class="col-lg-8">
					 <input class="form-control" name="currentpassword" id="currentpassword" type="password" placeholder="Your current password"/>
				 </div>
			 </div>
			 <div class="form-group">
				 <label class="col-lg-4 control-label" for="newpassword">New password</label>
				 <div class="col-lg-8">
					 <input class="form-control" name="newpassword" id="newpassword" type="password" placeholder="Your new password"/>
				 </div>
			 </div>
			 <div class="form-group">
				 <label class="col-lg-4 control-label" for="validatenewpassword">Current password</label>
				 <div class="col-lg-8">
					 <input class="form-control" name="validatenewpassword" id="validatenewpassword" type="password" placeholder="Validate your new password"/>
				 </div>
			 </div>
			 <div class="form-group">
				 <div class="col-lg-8 col-lg-offset-4">
					 <button type="submit" class="btn btn-success">Change password</button>
				 </div>
			 </div>
		 }
	 }
}